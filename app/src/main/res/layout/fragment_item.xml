<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.order.item.ItemFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/track_info_left_border"
        app:layout_constraintGuide_begin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/track_info_right_border"
        app:layout_constraintGuide_end="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/interface_left_border"
        app:layout_constraintGuide_begin="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/interface_right_border"
        app:layout_constraintGuide_end="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/button_back" />

    <ImageView
        android:id="@+id/cover"
        app:layout_constraintEnd_toStartOf="@+id/interface_right_border"
        app:layout_constraintStart_toStartOf="@+id/interface_left_border"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="46dp"
        android:scaleType="centerCrop"
         />


    <TextView
        android:id="@+id/partName"
        app:layout_constraintEnd_toStartOf="@+id/interface_right_border"
        app:layout_constraintTop_toBottomOf="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        tools:text="блюдо" />

    <TextView
        android:id="@+id/price"
        app:layout_constraintStart_toStartOf="@+id/interface_left_border"
        app:layout_constraintTop_toBottomOf="@+id/partName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена:"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/priceInt"
        app:layout_constraintEnd_toStartOf="@+id/interface_right_border"
        app:layout_constraintTop_toBottomOf="@+id/partName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/duration"
        app:layout_constraintStart_toStartOf="@+id/interface_left_border"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Добавить в корзину"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/add_cart"
        app:layout_constraintEnd_toStartOf="@+id/interface_right_border"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/cart" />
    <TextView
    android:id="@+id/description"
    app:layout_constraintStart_toStartOf="@+id/interface_left_border"
    app:layout_constraintTop_toBottomOf="@+id/add_cart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="Описание"
    android:textColor="@color/black" />
    <TextView
        android:id="@+id/descriptionName"
        app:layout_constraintStart_toStartOf="@+id/interface_left_border"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/black" />








</androidx.constraintlayout.widget.ConstraintLayout>


